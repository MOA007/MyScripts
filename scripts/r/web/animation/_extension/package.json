{
  "name": "my-animation-extension",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "vscode": "^1.32.0"
  },
  "repository": {
    "url": "https://github.com/Microsoft/vscode-extension-samples"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "yo.runSelection",
        "title": "VideoEdit: Run Selection"
      },
      {
        "command": "yo.exportAudio",
        "title": "VideoEdit: Export Audio Only"
      },
      {
        "command": "yo.startRecording",
        "title": "VideoEdit: Start Recording"
      },
      {
        "command": "yo.stopRecording",
        "title": "VideoEdit: Stop Recording"
      },
      {
        "command": "yo.collectNoiseProfile",
        "title": "VideoEdit: Collect Noise Profile"
      },
      {
        "command": "yo.openFileUnderCursor",
        "title": "VideoEdit: Open File Under Cursor"
      },
      {
        "command": "yo.insertAllClipsInFolder",
        "title": "VideoEdit: Insert All Clips In Folder"
      },
      {
        "command": "yo.removeUnusedRecordings",
        "title": "VideoEdit: Remove Unused Recordings"
      },
      {
        "command": "yo.showStats",
        "title": "VideoEdit: Show Stats"
      },
      {
        "command": "yo.createPpt",
        "title": "VideoEdit: Create PPT"
      },
      {
        "command": "yo.createMovyAnimation",
        "title": "VideoEdit: Create Movy Animation"
      }
    ],
    "keybindings": [
      {
        "command": "yo.runSelection",
        "key": "alt+enter",
        "when": "resourcePath =~ /vprojects/"
      },
      {
        "command": "yo.exportAudio",
        "key": "ctrl+alt+enter",
        "when": "resourcePath =~ /vprojects/"
      },
      {
        "command": "yo.startRecording",
        "key": "f7",
        "when": "resourcePath =~ /vprojects/"
      },
      {
        "command": "yo.stopRecording",
        "key": "f8",
        "when": "resourcePath =~ /vprojects/"
      },
      {
        "command": "yo.collectNoiseProfile",
        "key": "f9",
        "when": "resourcePath =~ /vprojects/"
      },
      {
        "command": "yo.openFileUnderCursor",
        "key": "f4",
        "when": "resourcePath =~ /vprojects/"
      }
    ],
    "snippets": [
      {
        "language": "markdown",
        "path": "./snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "tslint -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^12.12.0",
    "tslint": "^5.19.0",
    "typescript": "^3.8.3",
    "@types/vscode": "^1.32.0"
  }
}